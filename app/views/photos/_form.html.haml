= simple_form_for @photo, html:{ multipart: true} do |f|
	- if @photo.errors.any?
		#errors
			%h2
			= pluralize(@photo.errors.count,"error")
			prevented this picture from saving. 
			%ul
				- @photo.errors.full_messages.each do |msg|
					%li= msg
	= f.input :image, input_html: {class: 'form-control', id: 'files'}
	= f.input :title
	= f.input :description
	= f.submit :submit, class: 'btn btn-info mbd', value: 'Upload photo'
	= link_to 'Back', root_path, class: 'btn btn-default'