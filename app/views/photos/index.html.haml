.container
	.row
		.col-md-6.col-md-offset-3
			#masonry-container.transitions-enabled
				-@photos.each do |photo|
					.box.panel.panel-default.design
						= link_to image_tag(photo.image.url), photo_path(photo)
						%hr/
						%h2= photo.title
						%h4= truncate(photo.description, length: 100)
						%h5= 'Photo taken by:' + photo.user.email
						%h5= 'Uploaded ' + time_ago_in_words(photo.created_at) + ' ago.'